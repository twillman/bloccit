<div class = "row">
  <div class = "col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class = "media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class = "media-body">
        <h2 class = "media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>
<% if @user.has_posts_or_comments %>
  <h2>Posts</h2>
  <%= render @user.posts %>

  <h2>Comments</h2>
  <%= render @user.comments %>

  <h2>Favorites</h2>
  <% @user.favorites.each do |fav| %>
    <% @users.each do |user| %>
      <% user.posts.each do |post|%>
        <% if post.id == fav.post_id %>
        <div class = "row" >
          <div class = "media-left">
            <%= image_tag user.avatar_url(48), class: "gravatar" %>
          </div>
          <div class = "media-body">
            <%= render post %>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <h2><%= @user.name %> has not submitted any posts yet.</h2>
<% end %>
